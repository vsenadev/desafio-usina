{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/*"]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": ["node_modules"]
}
